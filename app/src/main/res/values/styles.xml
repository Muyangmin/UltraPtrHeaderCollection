<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="ToolBarContainerRelative">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ToolBarTitle">
        <item name="android:id">@id/tv_title</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_md_title</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxEms">10</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ToolBarBackButton">
        <item name="android:id">@id/imgbtn_title_back</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_nav_back</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>

</resources>
